<section class="video-embed" data-section-id="{{ section.id }}" data-section-type="video-embed">
  <div class="container">
    <div class="video-embed-container">
      {% if section.settings.video_url != blank %}
        {{ section.settings.video_url }}
      {% endif %}
      {% if section.settings.heading != blank or section.settings.description != blank %}
        <div class="content">
          {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.description != blank %}
            {{ section.settings.description }}
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Video Embed",
    "settings": [
      {
        "type": "text",
        "id": "video_url",
        "label": "Embed Code"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      }
    ],
    "presets": [
      {
        "name": "Video Embed",
        "category": "Page Features"
      }
    ]
  }
{% endschema %}