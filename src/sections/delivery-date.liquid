<div class="delivery-date">
  <div class="delivery-date__content">
  {% if section.settings.heading != blank %}
    <h3>{{ section.settings.heading }}</h3>
  {% endif %}
  {% if section.settings.text != blank %}
   {{ section.settings.text }}
  {% endif %}
  </div>
  <div id="st_delivery"></div>
</div>
{% schema %}
  {
    "name": "Delivery Date",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Delivery Date Text",
        "default": "<p>Use this to describe your delivery date requirements.</p>"
      }
    ] 
  }
{% endschema %}
