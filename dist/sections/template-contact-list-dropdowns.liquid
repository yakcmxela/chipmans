<section data-section-type="list-dropdowns" data-section-id="{{ section.id }}">
	{% if section.settings.heading != blank %}
		<h2 class="section-heading__level-centered"><span>{{ section.settings.heading | replace_first: '<p>', '' | replace: '<p>', '<br>' | replace: '</p>', '' }}</span></h2>
	{% endif %}
	{% if section.settings.list_heading != blank %}
		<p>{{ section.settings.list_heading | replace_first: '<p>', '' | replace: '<p>', '<br>' | replace: '</p>', '' }}</p>
	{% endif %}
	<div class="list-dropdowns">
		<div class="list-dropdowns__list">
			{% for block in section.blocks %}
				<div class="list-dropdowns__item">
					{% if block.settings.item_heading != blank %}
						<div class="list-dropdowns__item-heading">
							<h4>{{ block.settings.item_heading }}</h4>
							<div class="list-dropdowns__expand shop__icon-plus"></div>
						</div>
					{% endif %}
					{% if block.settings.item_caption %}
						<div class="list-dropdowns__item-caption">
							<p>{{ block.settings.item_caption }}</p>
						</div>
					{% endif %}
				</div>
			{% endfor %}
		</div>
		<div class="list-dropdowns__image">
			{% if section.settings.featured_image != blank %}
				<img src="{{ section.settings.featured_image | img_url: 'master' }}">
			{% endif %}
		</div>
	</div>
</section> 
{% schema %}
	{
		"name": "List with dropdowns",
		"settings": [
			{
				"type": "richtext",
				"id": "heading",
				"label": "Section Heading"
			},
			{
				"type": "richtext",
				"id": "list_heading",
				"label": "List Heading"
			}
		],
		"blocks": [
			{
				"type": "list",
				"name": "List Item",
				"settings": [
					{
						"type": "text",
						"id": "item_heading",
						"label": "Item Heading"
					},
					{
						"type": "richtext",
						"id": "item_caption",
						"label": "Item Caption"
					}
				]
			}
		]
	}
{% endschema %}