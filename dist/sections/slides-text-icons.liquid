	      	"id": "description",
	      	"label": "Section Description"
	      },
	      {
	        "type": "select",
	        "id": "alignment",
	        "label": "Slide Alignment",
	        "default": "row",
	        "options": [
	          {
	            "value": "row",
	            "label": "Left"
	          },
	          {
	            "value": "row-reverse",
	            "label": "Right"
	          }
	        ]
	      }
	    ],
	    "blocks": [
	      {
	        "type": "slide",
